@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<div class="container">
    <br />
    <div class="bg-secondary text-center py-4">
        <h2 class="text-white m-0">ROLE LIST</h2>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped text-center align-baseline">
            <tr class="table-secondary text-uppercase">
                <th width="100%">Name</th>
                <th>Manage</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <form asp-action="Delete" asp-route-roleId="@item.Id">
                            <div class="d-flex justify-content-center">
                                <a asp-action="Upsert" asp-route-roleId="@item.Id" class="btn btn-warning me-2">
                                    Edit
                                </a>
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                        class="btn btn-danger">
                                    DELETE
                                </button>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="card p-4">
            <h2>Not Found</h2>
            <p>There is no data found</p>
            <a class="btn btn-primary" href="/">Back Home</a>
        </div>
    }
</div>